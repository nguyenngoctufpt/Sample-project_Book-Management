<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable_bogoc"
    android:orientation="vertical"
    android:padding="8dp">


    <TextView
        android:layout_marginTop="-2dp"
        android:id="@+id/item_phieumuon_ma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="mã thủ thư"
        android:textStyle="italic" />

    <TextView
        android:layout_marginTop="-9dp"
        android:id="@+id/item_phieumuon_tentv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Tên Người"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_marginTop="-9dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_phieumuon_tensach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Tên"
            android:textStyle="bold|italic" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/item_phieumuon_tienthue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Giá"
            android:textStyle="bold|italic" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="-9dp"
        android:layout_gravity="center"
        android:id="@+id/item_phieumuon_trangthai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trạng thái"
        android:textColor="#FF0000" />

    <TextView
        android:layout_marginTop="-4dp"
        android:id="@+id/item_phieumuon_ngaymuon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Ngày"
        android:textSize="10sp"
        android:layout_marginBottom="-2dp"/>




</LinearLayout>